{
  "name": "CraigsList: Last Visited",
  "version": "3.0.1",
  "description": "Visually shows you what the last post on any CraigsList page you've seen is.",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [ {
    "css": [ "style.css"],
    "js": [ "background.js" ],
    "matches" : ["*://*.craigslist.org/*"],
    "run_at": "document_end"
  }],
  "permissions": [
    "unlimitedStorage",
    "notifications"
  ]
}